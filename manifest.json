{
  "manifest_version": 3,
  "name": "AI Summary & YouTube Auto Transcript",
  "version": "1.0",
  "description": "Summarize articles, download PDFs, and automatically open YouTube transcripts.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "downloads",
    "microphone",
    "tts"
  ],
  "optional_permissions": ["microphone"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["youtube-auto-transcript.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "host_permissions": ["<all_urls>"]
}
